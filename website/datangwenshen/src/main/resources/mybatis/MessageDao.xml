<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE  mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.rpframework.website.datangwenshen.dao.IMessageDao">

	<resultMap type="com.rpframework.website.datangwenshen.domain.Message" id="message" autoMapping="true" />
	
	<select id="doPager" resultMap="message">
		select * from message where 1=1 order by recordCreateTime desc
    </select>
	    
	<update id="update" parameterType="com.rpframework.website.datangwenshen.domain.Message" />
	<insert id="insert" parameterType="com.rpframework.website.datangwenshen.domain.Message" useGeneratedKeys="true" keyProperty="id"/>
	<delete id="delete" parameterType="com.rpframework.website.datangwenshen.domain.Message" />
	<select id="select" parameterType="Integer" resultMap="message">
		select * from message where id=#{id}
	</select> 
</mapper>