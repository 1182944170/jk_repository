<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE  mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.rpframework.website.xtexam.dao.IXTUserSubjectNoteDao">
	<resultMap type="com.rpframework.website.xtexam.domain.XTUserSubjectNote" id="mXTUserSubjectNote" autoMapping="true">
		<id property="id" column="id"/>
		<association property="subject" column="subjectId" select="com.rpframework.website.xtexam.dao.IExamSubjectDao.select" />
		<association property="user" column="userId" select="com.rpframework.website.xtexam.dao.IXTUserDao.select" />
	</resultMap>
	
	<select id="getUserFavCount" parameterType="Integer" resultType="Integer">
		select count(1) from xt_user_subject_note where userId=#{0} and isFav=1
	</select>
	
	<select id="getUserCommentCount" parameterType="Integer" resultType="Integer">
		select count(1) from xt_user_subject_note where userId=#{0} and content !='' and content IS NOT NULL
	</select>
	<select id="getUserFav" parameterType="Integer" resultMap="mXTUserSubjectNote">
		select * from xt_user_subject_note where userId=#{0} and isFav=1
	</select>
	
	<select id="getUserComment" parameterType="Integer" resultMap="mXTUserSubjectNote">
		select * from xt_user_subject_note where userId=#{0} and content !='' and content IS NOT NULL
	</select>
	
	<select id="findByUserIdAndSubjectId" resultMap="mXTUserSubjectNote">
		select * from xt_user_subject_note where userId=#{0} and subjectId = #{1}
	</select>
	
	<update id="update" parameterType="com.rpframework.website.xtexam.domain.XTUserSubjectNote" />
	<insert id="insert" parameterType="com.rpframework.website.xtexam.domain.XTUserSubjectNote" useGeneratedKeys="true" keyProperty="id"/>
	<delete id="delete" parameterType="com.rpframework.website.xtexam.domain.XTUserSubjectNote" />
	<select id="select" parameterType="Integer" resultMap="mXTUserSubjectNote">
		select * from xt_user_subject_note where id=#{id}
	</select>
</mapper>