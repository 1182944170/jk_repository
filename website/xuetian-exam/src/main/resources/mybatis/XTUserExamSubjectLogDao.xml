<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE  mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.rpframework.website.xtexam.dao.IXTUserExamSubjectLogDao">
	<resultMap type="com.rpframework.website.xtexam.domain.XTUserExamSubjectLog" id="mXTUserExamSubectLog" autoMapping="true">
		<id property="id" column="id"/>
		<association property="subject" column="subjectId" select="com.rpframework.website.xtexam.dao.IExamSubjectDao.select" />
		<association property="examLog" column="examLogId" select="com.rpframework.website.xtexam.dao.IXTUserExamLogDao.select" />
	</resultMap>
	
	<select id="getListByExamLogId" parameterType="Integer" resultMap="mXTUserExamSubectLog">
		select * from xt_user_exam_subject_log where 1=1 and examLogId=#{examLogId}
	</select>
	
	<select id="findByExamLogIdAndSubjectId" resultMap="mXTUserExamSubectLog">
		select * from xt_user_exam_subject_log where 1=1 and examLogId=#{0} and subjectId=#{1}
	</select>
	
	<select id="getUserWrongAnswerCount" parameterType="Integer" resultType="Integer">
		select COUNT(1) from 
				xt_user_exam_subject_log subject_log, 
				xt_user_exam_log exam_log
		where exam_log.id = subject_log.examLogId and exam_log.userId=#{userId} and subject_log.isAnswerRight=0 and userAnswer !=''
	</select>
	
	<select id="getUserWrongAnswer" parameterType="Integer" resultMap="mXTUserExamSubectLog">
		select subject_log.* from 
				xt_user_exam_subject_log subject_log, 
				xt_user_exam_log exam_log
		where exam_log.id = subject_log.examLogId and exam_log.userId=#{userId} and subject_log.isAnswerRight=0 and userAnswer !=''
	</select>

	<update id="update" parameterType="com.rpframework.website.xtexam.domain.XTUserExamSubjectLog" />
	<insert id="insert" parameterType="com.rpframework.website.xtexam.domain.XTUserExamSubjectLog" useGeneratedKeys="true" keyProperty="id"/>
	<delete id="delete" parameterType="com.rpframework.website.xtexam.domain.XTUserExamSubjectLog" />
	<select id="select" parameterType="Integer" resultMap="mXTUserExamSubectLog">
		select * from xt_user_exam_subject_log where id=#{id}
	</select>
</mapper>