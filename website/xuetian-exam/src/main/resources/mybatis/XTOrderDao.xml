<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE  mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.rpframework.website.xtexam.dao.IXTOrderDao">
	<resultMap type="com.rpframework.website.xtexam.domain.XTOrder" id="mXTOrder" autoMapping="true">
		<id property="id" column="id"/>
		<association property="user" column="userId" select="com.rpframework.website.xtexam.dao.IXTUserDao.select" />
	</resultMap>
	
	<update id="update" parameterType="com.rpframework.website.xtexam.domain.XTOrder" />
	<insert id="insert" parameterType="com.rpframework.website.xtexam.domain.XTOrder" useGeneratedKeys="true" keyProperty="id"/>
	<delete id="delete" parameterType="com.rpframework.website.xtexam.domain.XTOrder" />
	<select id="select" parameterType="Integer" resultMap="mXTOrder">
		select * from xt_order where id=#{id}
	</select>
	
	<select id="getUserSuccOrder" parameterType="Integer" resultMap="mXTOrder">
		select * from xt_order where userId=#{userId} and state=1
	</select>
	
	<select id="getUserSuccOrderCount" parameterType="Integer" resultType="Integer">
		select COUNT(1) from xt_order where userId=#{userId} and state=1
	</select>
</mapper>