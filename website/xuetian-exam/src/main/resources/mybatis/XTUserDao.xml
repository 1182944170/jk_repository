<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE  mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.rpframework.website.xtexam.dao.IXTUserDao">
	<resultMap type="com.rpframework.website.xtexam.domain.XTUser" id="xtUser" autoMapping="true">
		<id property="id" column="id"/>
	</resultMap>
	
	<select id="findXTUserByUserName" parameterType="String" resultMap="xtUser">
		select * from xt_user where 1=1 and userName=#{userNmae}
	</select>
	<select id="findXTUserByContact" parameterType="String" resultMap="xtUser">
		select * from xt_user where 1=1 and contact=#{contact}
	</select>
	
	<select id="doPager" parameterType="map" resultMap="xtUser">
		select * from xt_user where 1=1
		<if test="page.searchMap.userNmae != null">
			and userName like '%#{page.searchMap.userName}%'
		</if>
		 order by id
	</select>

	<update id="update" parameterType="com.rpframework.website.xtexam.domain.XTUser" />
	<insert id="insert" parameterType="com.rpframework.website.xtexam.domain.XTUser" useGeneratedKeys="true" keyProperty="id"/>
	<delete id="delete" parameterType="com.rpframework.website.xtexam.domain.XTUser" />
	<select id="select" parameterType="Integer" resultMap="xtUser">
		select * from xt_user where id=#{id}
	</select>
</mapper>