<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE  mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.rpframework.website.xtexam.dao.IExamSubjectOptionDao">

	<resultMap type="com.rpframework.website.xtexam.domain.ExamSubjectOption" id="examSubjectOption" autoMapping="true">
		<id property="id" column="id"/>
		<association property="examSubject" column="examSubjectId" select="com.rpframework.website.xtexam.dao.IExamSubjectDao.select" />
	</resultMap>
	
	<select id="getListBySubjectId" parameterType="Integer" resultMap="examSubjectOption">
		select * from xt_exam_subject_option where examSubjectId=#{examSubjectId}
	</select>
	<select id="findOptionBySubjectIdAndOptionName" resultMap="examSubjectOption">
		select * from xt_exam_subject_option where examSubjectId=#{param1} and optionName=#{param2}
	</select>

	<update id="update" parameterType="com.rpframework.website.xtexam.domain.ExamSubjectOption" />
	<insert id="insert" parameterType="com.rpframework.website.xtexam.domain.ExamSubjectOption" useGeneratedKeys="true" keyProperty="id"/>
	<delete id="delete" parameterType="com.rpframework.website.xtexam.domain.ExamSubjectOption" />
	<select id="select" parameterType="Integer" resultMap="examSubjectOption">
		select * from xt_exam_subject_option where id=#{id}
	</select>
</mapper>