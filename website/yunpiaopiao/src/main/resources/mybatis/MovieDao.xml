<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE  mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.rpframework.website.yunpiaopiao.dao.IMovieDao">
	<resultMap type="com.rpframework.website.yunpiaopiao.domian.Movie" id="mMovie" autoMapping="true">
		<id property="id" column="id"/>
		<collection property="movieActors" column="id" select="com.rpframework.website.yunpiaopiao.dao.IMovieActorDao.getMovieActorByMovieId" />
		<collection property="cinemaMovies" column="id" select="com.rpframework.website.yunpiaopiao.dao.ICinemaMovieDao.getCinemaMovieByMovieId" />
	</resultMap>
	
	<select id="doPager" resultMap="mMovie">
		select * from movie where 1=1
	</select>
	
	<update id="update" parameterType="com.rpframework.website.yunpiaopiao.domian.Movie" />
	<insert id="insert" parameterType="com.rpframework.website.yunpiaopiao.domian.Movie" useGeneratedKeys="true" keyProperty="id"/>
	<delete id="delete" parameterType="com.rpframework.website.yunpiaopiao.domian.Movie" />
	<select id="select" parameterType="Integer" resultMap="mMovie">
		select * from movie where id=#{id}
	</select>
</mapper>