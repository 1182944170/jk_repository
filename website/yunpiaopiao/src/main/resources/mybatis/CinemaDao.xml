<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE  mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.rpframework.website.yunpiaopiao.dao.ICinemaDao">
	<resultMap type="com.rpframework.website.yunpiaopiao.domian.Cinema" id="mCinema" autoMapping="true">
		<id property="id" column="id"/>
	</resultMap>
	
	<select id="doPager" resultMap="mCinema">
		select * from cinema where 1=1
		<if test="page.searchMap.isRecommend != null">
			and isRecommend=${page.searchMap.isRecommend}
		</if>
	</select>
	
	<select id="queryAll" resultMap="mCinema">
		select * from cinema where 1=1
	</select>
	
	<select id="queryRecommend" resultMap="mCinema">
		select * from cinema where 1=1 and isRecommend = 1
	</select>
	
	<update id="update" parameterType="com.rpframework.website.yunpiaopiao.domian.Cinema" />
	<insert id="insert" parameterType="com.rpframework.website.yunpiaopiao.domian.Cinema" useGeneratedKeys="true" keyProperty="id"/>
	<delete id="delete" parameterType="com.rpframework.website.yunpiaopiao.domian.Cinema" />
	<select id="select" parameterType="Integer" resultMap="mCinema">
		select * from cinema where id=#{id}
	</select>
</mapper>