<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE  mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.rpframework.website.luoluo.dao.IClaGoodsDao">

	<resultMap type="com.rpframework.website.luoluo.domain.ClaGoods" id="mClaGoods" autoMapping="true">
		<id property="id" column="id" />
		<association property="classification" column="claId" select="com.rpframework.website.luoluo.dao.IClassificationDao.select"/>
	</resultMap>		

	<select id="doPager" resultMap="mClaGoods">
         select * from  clafic_goods 
	</select> 
	
	
	<select id="getGoodsByclaId" parameterType="Integer" resultMap="mClaGoods">
		select * from clafic_goods where 1=1 and goodId=#{goodId}
	</select>
	
	<update id="update" parameterType="com.rpframework.website.luoluo.domain.ClaGoods" />
	<insert id="insert" parameterType="com.rpframework.website.luoluo.domain.ClaGoods" useGeneratedKeys="true" keyProperty="id"/>
	<delete id="delete" parameterType="com.rpframework.website.luoluo.domain.ClaGoods" />
	
	<select id="select" parameterType="Integer" resultMap="mClaGoods">
         select * from  clafic_goods where id=#{id}
	</select>
	
	<delete id="deleteByGoodsId">
	  delete from  clafic_goods  where  goodId=#{goodId}
	</delete>
</mapper>