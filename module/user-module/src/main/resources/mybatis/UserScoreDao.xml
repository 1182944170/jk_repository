<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE  mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.rpframework.module.user.dao.IUserScoreDao">

	<resultMap type="com.rpframework.module.user.domain.UserScore" id="mUserScore" autoMapping="true">
		<id property="userId" column="userId" />
	</resultMap>

	<select id="doPager" parameterType="map" resultMap="mUserScore">
		select * from u_score where 1=1
		<if test="page.searchMap.userId != null">
			and userId = #{page.searchMap.userId} 
		</if>
	</select>
	
	<update id="update" parameterType="com.rpframework.module.user.domain.UserScore" />
	<insert id="insert" parameterType="com.rpframework.module.user.domain.UserScore" useGeneratedKeys="true" keyProperty="userId"/>
	<delete id="delete" parameterType="com.rpframework.module.user.domain.UserScore" />
	<select id="select" parameterType="Integer" resultMap="mUserScore">
		select * from u_score where userId=#{userId}
	</select> 
</mapper>